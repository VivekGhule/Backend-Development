<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users Database</title>
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
   <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
  <a class="mb-8 text-blue-500" href="/">Go to Home</a>

  <div class="userContainer flex gap-5 flex-wrap">
    <% if (users.length > 0) { %>
      <% users.forEach(element => { %>
        <div class="container border border-zinc-500 bg-zinc-700 w-52 mt-5 rounded-lg">
          <div class="img w-full h-52 flex items-center justify-center bg-zinc-800 rounded-lg">
            <img class="max-w-full max-h-full object-contain rounded-lg"
                 src="<%= element.url %>"
                 alt="Image" />
          </div>

          <div class="desc mt-3 p-2">
            <h3 class="font-semibold"><%= element.name %></h3>
            <h4 class="text-sm text-zinc-300"><%= element.email %></h4>
            <div class="flex gap-5 mt-2">
              <a class="text-yellow-500 hover:underline" href="/edit/<%= element._id %>">Edit</a>
              <a class="text-orange-500 hover:underline" href="/delete/<%= element._id %>">Delete</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <h3 class="text-zinc-500 mt-5">No User Found</h3>
    <% } %>
  </div>
</div>

  </body>
</html>
